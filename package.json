{
	"name": "fundacionsoycuerpo-web",
	"description": "Web Fundaci√≥n Soy Cuerpo",
	"version": "0.0.1",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/fundacionsoycuerpo/web"
	},
	"scripts": {
		"dev": "svelte-kit dev",
		"build": "svelte-kit build",
		"start": "svelte-kit start",
		"static:serve": "npx http-serve build",
		"lint": "prettier --check . && eslint --ignore-path .gitignore .",
		"format": "prettier --write .",
		"cy:run": "cypress run",
		"cy:open": "cypress open",
		"test": "run-p --race dev cy:run",
		"test:build:open": "npm run build && run-p --race static:serve cy:open",
		"test:build:run": "npm run build && run-p --race static:serve cy:run",
		"test:open": "run-p --race static:serve cy:open",
		"test:run": "run-p --race static:serve cy:run"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "next",
		"@sveltejs/kit": "next",
		"@testing-library/cypress": "^7.0.1",
		"@typescript-eslint/eslint-plugin": "^4.19.0",
		"@typescript-eslint/parser": "^4.19.0",
		"axios": "^0.21.1",
		"cypress": "^7.1.0",
		"date-fns": "^2.20.3",
		"eslint": "^7.22.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-svelte3": "^3.1.0",
		"husky": "^4.3.0",
		"image-size": "^0.9.3",
		"marked": "^1.2.4",
		"npm-run-all": "^4.1.5",
		"prettier": "~2.2.1",
		"prettier-plugin-svelte": "^2.2.0",
		"pretty-quick": "^3.1.0",
		"sass": "^1.0.0",
		"svelte": "^3.29.0",
		"svelte-preprocess": "^4.0.0",
		"tslib": "^2.0.0",
		"typescript": "^4.0.0",
		"vite": "^2.1.5"
	},
	"engines": {
		"node": "14.x"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	}
}
